<form action="/signup" method="POST" id="signoutForm">
    <div >
        <div class="card card-container">
            <div class='login-card'> <img src="../public/img/calendar.jpg" alt="calendar icon" class='calendar-icon'></div>
            <p id="profile-name" class="profile-name-card"></p>
            <span id="reauth-email" class="reauth-email"></span>
            <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Email address" required autofocus>
            <div><p></p></div>
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
            <div><p></p></div>
            <input type="password" id="inputconfirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password" required>
            <div><p></p></div>  
            <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Full Name" required>
            <div><p></p></div>
            <div>
                {{#if nameError}}
                <p class="errorMessage">Username Already Exists</p>
                {{/if}}
                {{#if notSameError}}
                <p class="errorMessage">Passwords must match</p>
                {{/if}}
            </div>
            <div><p></p></div>
            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Create an Account</button>
            <div>
                <a href="/login" class="back-to-login" >
                    Already have an account?
                </a>
            </div>
        </div>
    </div>
</form>
        
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

        
