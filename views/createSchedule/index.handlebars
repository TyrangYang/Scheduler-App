<form action="/createSchedule" method="POST" id='createSchedule' >
    <div class="container contact">
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
                    <h4>Enter your schedule details and invite members to edit</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <div class="form-group">
                        <label class="control-label col-sm-12" for="fname">Meeting Title:</label>
                        <div class="col-sm-10">          
                            <input type="text" name="title" maxlength="70" placeholder="Enter a Meeting Title" class="title-input" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-12" for="lname">Meeting Description:</label>
                        <div class="col-sm-10">          
                            <textarea type="text" name="description" maxlength="300" rows="4" cols="50" class="description-input" placeholder='Enter a meeting description' required></textarea>        
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-8" for="comment">Meeting Dates:</label>
                        <div class="col-sm-12" >
                            <div class="input_date_fields_wrap">
                                <button class="add_date_field_button">Add Another Date</button>
                                <div><input id='datefield' type="date" min='1899-01-01' name="dates" required></div>   
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-8" for="email">Team Member Emails:</label>
                        <div class="col-sm-12">
                            <div class="input_email_fields_wrap">
                                <p hidden id='hidden-email'>{{email}}</p>
                                <button class="add_email_field_button">Add Another Email</button>
                                <div><input id='email' type="email" name="emails" placeholder="example@gmail.com" required></div>     
                            </div>
                        </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>                
</form>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
